<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    >

    <include
        layout="@layout/custom_toolbar"/>

    <ImageView
        android:layout_width="@dimen/x100"
        android:layout_height="@dimen/x100"
        android:src="@mipmap/icon_logo"
        android:layout_marginTop="@dimen/x20"
        android:layout_gravity="center_horizontal"
        />
    <TextView
        android:id="@+id/activity_about_appname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="@dimen/SIZE_18_SP"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/x15"
        />
    <TextView
        android:id="@+id/activity_about_versionname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="@dimen/SIZE_16_SP"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/x15"
        />

    <View
        android:layout_marginTop="@dimen/x60"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_indicator_line"
        android:background="@color/view_line"/>

    <TextView
        android:id="@+id/activity_about_brief"
        android:padding="@dimen/x20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="简介"
        android:textSize="@dimen/SIZE_18_SP"
        android:drawableRight="@mipmap/ic_black"
        android:background="#ffffffff"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_indicator_line"
        android:background="@color/view_line"/>

    <TextView

        android:id="@+id/activity_about_version"
        android:padding="@dimen/x20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="版本检测"
        android:textSize="@dimen/SIZE_18_SP"
        android:drawableRight="@mipmap/ic_black"
        android:background="#ffffffff"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_indicator_line"
        android:background="@color/view_line"/>

</LinearLayout>