<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:paddingLeft="@dimen/x15"
    android:paddingRight="@dimen/x15"
    android:paddingTop="@dimen/x15"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/our_comments_civ"
        android:layout_width="@dimen/x80"
        android:layout_height="@dimen/x80"
        android:src="@mipmap/image_1"
        android:layout_marginLeft="@dimen/x15"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/our_comments_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="隔壁老王"
            android:paddingLeft="@dimen/x15"
            android:layout_marginLeft="@dimen/x20"
            android:textSize="@dimen/SIZE_14_SP"
            />

        <TextView
            android:id="@+id/our_comments_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2017/06/22"
            android:paddingLeft="@dimen/x15"
            android:layout_marginLeft="@dimen/x20"
            android:textSize="@dimen/SIZE_12_SP"
            android:textColor="@color/regist_text_o"
            />

        <TextView
            android:id="@+id/our_comments_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="发生法撒旦法是的噶是的发送的发生的发生的发生法师的发 "
            android:padding="@dimen/x15"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginTop="@dimen/x10"
            android:textSize="@dimen/SIZE_14_SP"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/tab_indicator_line"
            android:background="@color/darkgray"/>
    </LinearLayout>
    </LinearLayout>
</RelativeLayout>