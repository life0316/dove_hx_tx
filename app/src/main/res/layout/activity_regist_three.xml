<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/custom_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/x30"
        android:paddingLeft="@dimen/x55"
        android:paddingRight="@dimen/x55"
        android:paddingTop="@dimen/x30">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/act_regist_dovecote_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/x10"
                android:layout_weight="10"
                android:background="@drawable/line_et_bg"
                android:drawableLeft="@mipmap/icon_gename_1"
                android:drawablePadding="@dimen/x10"
                android:hint="@string/dovecote_name"
                android:maxLength="6"
                android:padding="@dimen/x6"
                android:singleLine="true"
                android:textColorHint="@color/regist_text"
                android:textCursorDrawable="@drawable/editcursor"
                android:textSize="@dimen/SIZE_18_SP" />


            <ImageView
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x30"
                android:layout_weight="1"
                android:padding="@dimen/x10"
                android:src="@mipmap/icon_tab_news" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/act_regist_club"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/x10"
                android:layout_weight="10"
                android:background="@drawable/line_et_bg"
                android:drawableLeft="@mipmap/icon_clab_1"
                android:drawablePadding="@dimen/x10"
                android:hint="@string/club_name"
                android:maxLength="6"
                android:padding="@dimen/x6"
                android:singleLine="true"
                android:textColorHint="@color/regist_text"
                android:textCursorDrawable="@drawable/editcursor"
                android:textSize="@dimen/SIZE_18_SP" />

            <ImageView
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x30"
                android:layout_weight="1"
                android:padding="@dimen/x10" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/act_regist_union"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/x10"
                android:layout_weight="10"
                android:background="@drawable/line_et_bg"
                android:drawableLeft="@mipmap/icon_union_1"
                android:drawablePadding="@dimen/x10"
                android:hint="@string/union_name"
                android:maxLength="6"
                android:padding="@dimen/x6"
                android:singleLine="true"
                android:textColorHint="@color/regist_text"
                android:textCursorDrawable="@drawable/editcursor"
                android:textSize="@dimen/SIZE_18_SP" />

            <ImageView
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x30"
                android:layout_weight="1"
                android:padding="@dimen/x10" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/act_regist_feed_pigeon_year"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/x10"
                android:layout_weight="10"
                android:background="@drawable/line_et_bg"
                android:digits="0123456789."
                android:drawableLeft="@mipmap/icon_year_1"
                android:drawablePadding="@dimen/x10"
                android:hint="@string/feed_pigeon_year"
                android:inputType="number"
                android:maxLength="3"
                android:padding="@dimen/x6"
                android:singleLine="true"
                android:textColorHint="@color/regist_text"
                android:textCursorDrawable="@drawable/editcursor"
                android:textSize="@dimen/SIZE_18_SP" />

            <ImageView
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x30"
                android:layout_weight="1"
                android:padding="@dimen/x10"
                android:src="@mipmap/icon_tab_news" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/x10"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <CheckBox
                android:id="@+id/act_regist_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/read_agree"
                android:textColor="#b4acac"
                android:theme="@style/cb_test"
                />

            <TextView
                android:id="@+id/act_regist_user_protocol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_protocol"
                android:textColor="@color/colorBlue"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/DIP_200_DP"
            android:orientation="horizontal">

            <Button
                android:id="@+id/act_regist_three_pro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_pigeon_bg"
                android:textColor="#fff"
                android:text="上一步" />

            <Button
                android:id="@+id/act_regist_three_regist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/btn_pigeon_bg2"
                android:enabled="false"
                android:textColor="#fff"
                android:text="注册" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>