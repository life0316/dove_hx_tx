<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#99e1dede"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/x350"
       android:paddingLeft="@dimen/x75"
        android:paddingRight="@dimen/x75"
        >

        <TextView
            android:id="@+id/confirm_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/top_title"
            android:paddingLeft="@dimen/x20"
            android:paddingTop="@dimen/x20"
            android:text="标题"
            android:textColor="#000"
            android:textSize="@dimen/SIZE_18_SP"
            android:textStyle="bold"
            />


        <LinearLayout
            android:id="@+id/confirm_dialog_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/confirm_dialog_title"
            android:background="#fff"
            android:gravity="center_vertical"
            android:minHeight="@dimen/x140"
            android:paddingLeft="@dimen/x20"
            >

            <ImageView
                android:layout_width="@dimen/x60"
                android:layout_height="@dimen/x60"
                android:src="@mipmap/icon_img_2"
                />

            <TextView
                android:id="@+id/confirm_dialog_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:maxLines="5"
                android:paddingLeft="@dimen/x20"
                android:text="信息"
                android:textColor="#9000"
                android:textSize="@dimen/SIZE_16_SP"
                />

        </LinearLayout>

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tab_indicator_line"
            android:layout_below="@id/confirm_dialog_ll"
            android:background="#ccc"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x80"
            android:layout_below="@id/line1"
            android:background="@drawable/bottom_title"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/confirm_dialog_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="#979595"
                android:textSize="@dimen/SIZE_18_SP"
                />

            <View
                android:layout_width="@dimen/tab_indicator_line"
                android:layout_height="match_parent"
                android:background="#ccc"/>

            <TextView
                android:id="@+id/confirm_dialog_confirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确认"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/SIZE_18_SP"
                />
        </LinearLayout>


    </RelativeLayout>
</LinearLayout>