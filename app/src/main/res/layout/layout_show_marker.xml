<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/show_marker_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="#ffffff"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/show_marker_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/x15"
                android:text="2017-05-04 14:35:08"
                android:textSize="@dimen/SIZE_18_SP" />

            <ImageView
                android:id="@+id/show_marker_dismiss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/x15"
                android:src="@mipmap/cancel" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:padding="@dimen/x5">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/x50"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/show_marker_speed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="480"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/SIZE_28_SP" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/x10"
                    android:layout_marginTop="@dimen/x10"
                    android:text="飞行速度(米/分钟)"
                    android:textSize="@dimen/SIZE_14_SP" />


            </LinearLayout>

            <View
                android:layout_width="@dimen/tab_indicator_line"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@color/colorPrimary" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x50"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/show_marker_height"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="35.O"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/SIZE_28_SP" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/x10"
                    android:layout_marginTop="@dimen/x10"
                    android:text="飞行海拔高度(米)"
                    android:textSize="@dimen/SIZE_14_SP" />


            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:padding="@dimen/x5">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/x50"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/show_marker_longitude"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="120.586127"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/SIZE_24_SP" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/x10"
                    android:layout_marginTop="@dimen/x10"
                    android:gravity="center"
                    android:text="经度"
                    android:textSize="@dimen/SIZE_14_SP" />


            </LinearLayout>

            <View
                android:layout_width="@dimen/tab_indicator_line"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@color/colorPrimary" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x50"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/show_marker_latitude"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="31.13169959"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/SIZE_24_SP" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/x10"
                    android:layout_marginTop="@dimen/x10"
                    android:gravity="center"
                    android:text="纬度"
                    android:textSize="@dimen/SIZE_14_SP" />
            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/show_marker_direction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/x15"
            android:text="方向："
            android:textSize="@dimen/SIZE_18_SP" />

        <TextView
            android:id="@+id/show_marker_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/marker2"
            android:drawablePadding="@dimen/x10"
            android:gravity="center"
            android:text="地址"
            android:textSize="@dimen/SIZE_18_SP" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/x20"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/x15"
                android:text="当前已飞行 "
                android:textSize="@dimen/SIZE_16_SP" />

            <TextView
                android:id="@+id/show_marker_mileage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20.0"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/SIZE_24_SP" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/x15"
                android:text="公里 "
                android:textSize="@dimen/SIZE_16_SP" />

        </LinearLayout>
    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/transparent"
        android:layout_marginTop="@dimen/x10"
        >

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:src="@mipmap/icon_delete" />

    </FrameLayout>
</LinearLayout>