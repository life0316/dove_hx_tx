<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/details_pigeon_bg"
    android:orientation="vertical"
    android:id="@+id/fly_ll"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/x10">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x30"
            android:gravity="center_vertical"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/total_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x10"
                android:text="00:00:00"
                android:textSize="@dimen/SIZE_24_SP"
                android:textColor="@color/colorLightBlue"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/time"
                android:drawablePadding="@dimen/x10"
                android:gravity="center_vertical"
                android:text="总时间（小时）"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/SIZE_16_SP" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x30"
            android:gravity="center_vertical"

            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="26dp">

            <TextView
                android:id="@+id/mileage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x10"
                android:text="0.00"
                android:textColor="@color/colorLightBlue"
                android:textSize="@dimen/SIZE_24_SP" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/distance"
                android:drawablePadding="@dimen/x10"
                android:gravity="center_vertical"
                android:text="总路程（公里）"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/SIZE_16_SP" />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_indicator_line"
        android:layout_marginTop="@dimen/x10"
        android:background="@color/tab_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/x10"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/x30"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="平均分速:"
                android:textColor="@color/colorBlack"
                />

            <TextView
                android:id="@+id/slowest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x20"
                android:text="0"
                android:textSize="@dimen/SIZE_24_SP"
                android:textColor="@color/colorLightBlue"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x10"
                android:text="米/秒"
                android:textColor="@color/colorBlack"
                />
        </LinearLayout>

