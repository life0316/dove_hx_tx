<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="@dimen/DIP_45_DP"
              android:gravity="center_horizontal"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/x20"
        >

    <CheckBox
        android:id="@+id/item_rv_tra_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@null"
        android:background="@drawable/btn_check"
        android:layout_marginLeft="@dimen/x35"
        android:layout_marginRight="@dimen/x60"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/item_rv_tra_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/SIZE_18_SP"
        android:text="信鸽"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_indicator_line"
        android:background="@color/tab_line"
        />

</LinearLayout>